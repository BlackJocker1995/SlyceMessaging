<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="it.snipsnap.slyce_messaging_example">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="ui.loginAndRegister.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="ui.MainActivity"/>
        <activity android:name="ui.loginAndRegister.RegisterActivity"/>
        <activity android:name=".SendActivity"/>
        <activity android:name="ui.AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity"/>
        </activity>
        <activity android:name="ui.NoticeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity"/>
        </activity>
        <activity android:name="ui.SearchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity"/>
        </activity>
        <activity android:name="ui.ZiliaoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity"/>
        </activity>
    </application>

</manifest>